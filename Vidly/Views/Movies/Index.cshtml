@using Vidly.Models
@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
<br />
<br />

@{
    bool isThereMovies = Model.Any();
    string classes = isThereMovies ? "table table-bordered table-hover" : null;
}

@if (!isThereMovies)
{
    <p> There are no Movies</p>
}
else
{
    <table class="@classes">
        <tr>
            <th>ID</th>
            <th>Movie Name</th>
            <th>Genre</th>
        </tr>
        @foreach (Movie movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.MovieGenre.Name</td>
            </tr>
        }
    </table>
}
