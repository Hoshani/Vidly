@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        Genre: @Model.MovieGenre.Name
    </li>
    <li>
        Release Date: @Model.ReleaseDate.ToString("dddd,MMM d,yyyy")
    </li>
    <li>
        Date Added: @Model.DateAdded.ToString("dddd,MMM d,yyyy")
    </li>
    <li>
        Number in Stock: @Model.NumberInStock
    </li>
</ul>

